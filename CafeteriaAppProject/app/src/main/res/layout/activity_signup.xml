<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LOGIN ID"
        android:id="@+id/s_id"
        android:layout_above="@+id/s_password"
        android:layout_alignStart="@+id/s_password" />

    <EditText
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:id="@+id/s_password"
        android:layout_above="@+id/s_username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="USERNAME"
        android:id="@+id/s_username"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/s_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="#0000FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/s_button"
        android:onClick="signup"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/s_id" />


</RelativeLayout>