<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l_id"
        android:src="@drawable/iitchicagologo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="LOGIN ID"
        android:id="@+id/l_id"
        android:layout_above="@+id/l_password"
        android:layout_alignLeft="@+id/l_password" />

    <EditText
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="PASSWORD"
        android:id="@+id/l_password"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:textColor="#0000FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/button"
        android:onClick="login"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/l_password" />

    <Button
        android:textColor="#0000FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/button2"
        android:onClick="signup"
        android:layout_above="@+id/imageView2"
        android:layout_toRightOf="@+id/l_password" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/cafeterialogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/imageView2"
        android:layout_below="@+id/button" />

    <!---
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD"
        android:id="@+id/button9"
        android:onClick="callForgotPassword"
        android:layout_above="@+id/imageView2"
        android:layout_toRightOf="@+id/l_id" />
    -->

</RelativeLayout>
