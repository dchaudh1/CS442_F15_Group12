<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="skallaje.cafeteria_app.cs442.com.UpdateItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_u"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/price_u" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price_u"
        android:layout_below="@+id/item_u"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/desc_u" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc_u"
        android:layout_below="@+id/price_u"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button" />

    <Button
        android:textColor="#0000FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button"
        android:onClick="updateNew"
        android:layout_below="@+id/desc_u"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
